{
  "name": "contact-list",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "deploy": "surge --project dist --domain contactos.surge.sh",
    "lint": "vue-cli-service lint",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e:firefox": "testcafe firefox tests/e2e/testcafe.js",
    "test:e2e:chrome": "testcafe chrome tests/e2e/testcafe.js",
    "test:e2e:browsers": "testcafe chrome,firefox tests/e2e/testcafe.js --app \"yarn serve\""
  },
  "dependencies": {
    "buefy": "^0.7.3",
    "register-service-worker": "^1.6.2",
    "surge": "latest",
    "vue": "^2.6.10",
    "vue-resource": "^1.5.1",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.5.3",
    "@vue/cli-plugin-e2e-cypress": "^3.5.1",
    "@vue/cli-plugin-eslint": "^3.5.1",
    "@vue/cli-plugin-pwa": "^3.5.1",
    "@vue/cli-plugin-unit-jest": "^3.5.3",
    "@vue/cli-service": "^3.5.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "eslint": "^5.15.3",
    "eslint-plugin-vue": "^5.2.2",
    "faker": "^4.1.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "testcafe": "^1.1.3",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
